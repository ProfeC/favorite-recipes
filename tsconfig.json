{
    "compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"jsx": "react",
		"module": "commonjs",
		"newLine": "LF",
		"noImplicitAny": false,
		"outDir": "./dist/",
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es2018"
    },
    "include": [
        "./src/**/*"
	],
	"exclude": [
		"./node_modules",
        "**/*.spec.ts",
        "**/*.d.ts"
	]
}
